<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/fragment_notifications_text_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/main_margin"
        android:fontFamily="@font/open_sans_regular"
        android:text="@string/fragment_notifications_text_title"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/fragment_title_size_portrait"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fragment_notifications_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/main_margin"
        app:layout_constraintBottom_toTopOf="@id/fragment_notifications_text_schedule"
        app:layout_constraintTop_toBottomOf="@+id/fragment_notifications_text_title" />

    <TextView
        android:id="@+id/fragment_notifications_text_schedule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/fragment_notifications_text_schedule"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_notifications_recycler_view" />
</androidx.constraintlayout.widget.ConstraintLayout>
